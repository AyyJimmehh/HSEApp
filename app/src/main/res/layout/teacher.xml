<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.example.hseapp.R"/>
        <variable
            name="teacher"
            type="com.example.hseapp.datamodels.Teacher" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="@dimen/staff_padding">

        <androidx.cardview.widget.CardView
            android:id="@+id/teacher_img"
            app:cardCornerRadius="24dp"
            android:layout_width="@dimen/profile_img"
            android:layout_height="@dimen/profile_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="@dimen/profile_img"
                android:layout_height="@dimen/profile_img"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/teacher_img"
            app:layout_constraintTop_toTopOf="@id/teacher_img"
            tools:text="Example Name"
            android:text="@{teacher.name}"
            android:textColor="@color/black"
            android:textSize="@dimen/font"
            android:fontFamily="@font/inter_medium"
            android:layout_marginStart="@dimen/tab_top_start_margin" />

        <TextView
            android:id="@+id/teacher_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/teacher_img"
            app:layout_constraintTop_toBottomOf="@id/teacher_name"
            tools:text="Role"
            android:text="@{teacher.role}"
            android:textSize="@dimen/msg_number_size"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/primary_hse_blue"
            android:layout_marginStart="@dimen/tab_top_start_margin"/>

        <TextView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/teacher_role"
            app:layout_constraintTop_toBottomOf="@id/teacher_name"
            android:text="Â·"
            android:textSize="@dimen/msg_number_size"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/primary_hse_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/dot"
            app:layout_constraintTop_toBottomOf="@id/teacher_name"
            tools:text="193"
            android:text="@{teacher.group}"
            android:textSize="@dimen/msg_number_size"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/primary_hse_blue"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
