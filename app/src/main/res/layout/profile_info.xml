<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/toolbar_background">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_img"
            app:cardCornerRadius="@dimen/profile_corner"
            android:layout_width="@dimen/profile_img"
            android:layout_height="@dimen/profile_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/period_horiz_padding"
            android:layout_marginStart="@dimen/counter_margin">

            <ImageView
                android:layout_width="@dimen/profile_img"
                android:layout_height="@dimen/profile_img"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/profile_img"
            app:layout_constraintTop_toTopOf="@id/profile_img"
            android:layout_marginStart="@dimen/profile_corner"
            android:textColor="@color/primary_hse_blue"
            android:fontFamily="@font/inter_medium"
            android:text="Role"
            android:textSize="@dimen/msg_number_size"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/profile_img"
            app:layout_constraintTop_toBottomOf="@id/role"
            android:layout_marginStart="@dimen/profile_corner"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:text="Name"
            android:textSize="@dimen/font"/>

        <TextView
            android:id="@+id/course_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/profile_img"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginStart="@dimen/profile_corner"
            android:textColor="@color/not_selected"
            android:fontFamily="@font/inter_regular"
            android:text="BPAD Group 193"
            android:textSize="@dimen/msgr_size"
            android:paddingBottom="@dimen/tab_top_start_margin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
