<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_space">

    <TextView
        android:id="@+id/task_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="TASK FILE"
        android:textColor="@color/not_selected"
        android:textSize="@dimen/msg_number_size"
        android:fontFamily="@font/inter_medium"/>

    <TextView
        android:id="@+id/task_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/task_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/tab_top_start_margin"
        android:padding="@dimen/space_margin"
        android:background="@drawable/role_background"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="There is a large amount of text here that you probably won't be able to see at all"
        android:textSize="@dimen/font"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/primary_hse_blue"/>

    <TextView
        android:id="@+id/post_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/task_file"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/tab_top_start_margin"
        android:text="POSTED BY"
        android:textColor="@color/not_selected"
        android:textSize="@dimen/msg_number_size"
        android:fontFamily="@font/inter_medium"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/poster_image"
        app:cardCornerRadius="@dimen/arrow_margin"
        android:layout_width="@dimen/timetable_margin"
        android:layout_height="@dimen/timetable_margin"
        app:layout_constraintTop_toBottomOf="@id/post_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/tab_top_start_margin">

        <ImageView
            android:layout_width="@dimen/timetable_margin"
            android:layout_height="@dimen/timetable_margin"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/poster_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/poster_image"
        app:layout_constraintTop_toBottomOf="@id/post_header"
        android:layout_marginTop="@dimen/padding_space"
        android:layout_marginStart="@dimen/tab_top_start_margin"
        android:text="Oleg Melnikov"
        android:textSize="@dimen/font"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>