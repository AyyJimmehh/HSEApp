<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="com.example.hseapp.R"/>
        <variable
            name="course"
            type="com.example.hseapp.datamodels.Course"/>
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp"
        app:strokeColor="@color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/tab_top_start_margin"
                tools:text = "Course"
                android:text="@{course.name}"
                android:textSize="@dimen/font"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/not_selected"/>

            <TextView
                android:id="@+id/msgcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/subject"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/msg_padding"
                android:layout_marginStart="@dimen/tab_top_start_margin"
                android:layout_marginTop="@dimen/msg_padding"
                tools:text = "123"
                android:text="@{String.valueOf(course.msgCount)}"
                android:textSize="@dimen/msg_number_size"
                android:fontFamily="@font/inter_medium"
                android:background="@drawable/msg_counter"
                android:textColor="@color/not_selected"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
