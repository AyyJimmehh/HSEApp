<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chats"
        android:textColor="@color/black"
        android:textSize="@dimen/font"
        android:fontFamily="@font/inter_medium"
        android:layout_marginBottom="@dimen/counter_margin"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstchat">

        <androidx.cardview.widget.CardView
            android:id="@+id/firstchat_image"
            app:cardCornerRadius="@dimen/img_corner"
            android:layout_width="@dimen/img_dimen"
            android:layout_height="@dimen/img_dimen"
            app:layout_constraintTop_toTopOf="@id/firstchat"
            app:layout_constraintStart_toStartOf="@id/firstchat">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/firstchat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/firstchat_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Important"
            android:textColor="@color/black"
            android:textSize="@dimen/font"
            android:fontFamily="@font/inter_medium"
            android:layout_marginStart="@dimen/period_horiz_padding"/>

        <TextView
            android:id="@+id/firstchat_lastuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/firstchat_name"
            app:layout_constraintStart_toEndOf="@id/firstchat_image"
            tools:text="Me"
            android:textColor="@color/black"
            android:textSize="@dimen/msgr_size"
            android:fontFamily="@font/inter_regular"
            android:layout_marginStart="@dimen/period_horiz_padding"/>

        <TextView
            android:id="@+id/firstchat_msgcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/firstchat_lastuser"
            app:layout_constraintTop_toTopOf="@id/firstchat_lastuser"
            app:layout_constraintBottom_toTopOf="@id/firstchat_lastmsg"
            android:padding="@dimen/msg_padding"
            android:layout_marginStart="@dimen/msg_no_margin"
            tools:text = "123"
            android:textSize="@dimen/msg_number_size"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/msg_counter"
            android:textColor="@color/not_selected"/>

        <TextView
            android:id="@+id/firstchat_lastmsg"
            android:layout_width="@dimen/lastmsg_length"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/period_horiz_padding"
            tools:text="Big amount of text that cannot fully be seen"
            android:ellipsize="end"
            android:fontFamily="@font/inter_regular"
            android:maxLines="1"
            android:textColor="@color/not_selected"
            android:textSize="@dimen/msgr_size"
            app:layout_constraintStart_toEndOf="@id/firstchat_image"
            app:layout_constraintTop_toBottomOf="@id/firstchat_lastuser"/>

        <TextView
            android:id="@+id/firstchat_msgtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/firstchat_lastmsg"
            app:layout_constraintStart_toEndOf="@id/firstchat_lastmsg"
            tools:text=".17m"
            android:textColor="@color/not_selected"
            android:textSize="@dimen/msgr_size" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/counter_margin"
        android:id="@+id/secondchat">

        <androidx.cardview.widget.CardView
            android:id="@+id/secondchat_image"
            app:cardCornerRadius="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@id/secondchat"
            app:layout_constraintStart_toStartOf="@id/secondchat">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/secondchat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/secondchat_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Students Only"
            android:textColor="@color/black"
            android:textSize="@dimen/font"
            android:fontFamily="@font/inter_medium"
            android:layout_marginStart="@dimen/period_horiz_padding"/>

        <TextView
            android:id="@+id/secondchat_lastuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/secondchat_name"
            app:layout_constraintStart_toEndOf="@id/secondchat_image"
            tools:text="Me"
            android:textColor="@color/black"
            android:textSize="@dimen/msgr_size"
            android:fontFamily="@font/inter_regular"
            android:layout_marginStart="@dimen/period_horiz_padding"/>

        <TextView
            android:id="@+id/secondchat_msgcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/secondchat_lastuser"
            app:layout_constraintTop_toTopOf="@id/secondchat_lastuser"
            app:layout_constraintBottom_toTopOf="@id/secondchat_lastmsg"
            android:padding="@dimen/msg_padding"
            android:layout_marginStart="@dimen/msg_no_margin"
            tools:text = "123"
            android:textSize="@dimen/msg_number_size"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/msg_counter"
            android:textColor="@color/not_selected"/>

        <TextView
            android:id="@+id/secondchat_lastmsg"
            android:layout_width="@dimen/lastmsg_length"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/secondchat_lastuser"
            app:layout_constraintStart_toEndOf="@id/secondchat_image"
            tools:text="Big amount of text that cannot fully be seen"
            android:textColor="@color/not_selected"
            android:textSize="@dimen/msgr_size"
            android:fontFamily="@font/inter_regular"
            android:layout_marginStart="@dimen/period_horiz_padding"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/secondchat_msgtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/secondchat_lastmsg"
            app:layout_constraintStart_toEndOf="@id/secondchat_lastmsg"
            tools:text=".17m"
            android:textColor="@color/not_selected"
            android:textSize="@dimen/msgr_size" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thirdchat"
        android:layout_marginTop="@dimen/counter_margin">

        <androidx.cardview.widget.CardView
            android:id="@+id/thirdchat_image"
            app:cardCornerRadius="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@id/thirdchat"
            app:layout_constraintStart_toStartOf="@id/thirdchat">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/thirdchat_name"
            android:layout_width="@dimen/thirdchat_name_length"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/thirdchat_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Professors/Students/Assistants"
            android:textColor="@color/black"
            android:textSize="@dimen/font"
            android:fontFamily="@font/inter_medium"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="@dimen/period_horiz_padding"/>

        <TextView
            android:id="@+id/thirdchat_lastuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/thirdchat_name"
            app:layout_constraintStart_toEndOf="@id/thirdchat_image"
            tools:text="Me"
            android:textColor="@color/black"
            android:textSize="@dimen/msgr_size"
            android:fontFamily="@font/inter_regular"
            android:layout_marginStart="@dimen/period_horiz_padding"/>

        <TextView
            android:id="@+id/thirdchat_msgcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/thirdchat_lastuser"
            app:layout_constraintTop_toTopOf="@id/thirdchat_lastuser"
            app:layout_constraintBottom_toTopOf="@id/thirdchat_lastmsg"
            android:padding="@dimen/msg_padding"
            android:layout_marginStart="@dimen/msg_no_margin"
            tools:text = "123"
            android:textSize="@dimen/msg_number_size"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/msg_counter"
            android:textColor="@color/not_selected"/>

        <TextView
            android:id="@+id/thirdchat_lastmsg"
            android:layout_width="@dimen/lastmsg_length"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/thirdchat_lastuser"
            app:layout_constraintStart_toEndOf="@id/thirdchat_image"
            tools:text="Big amount of text that cannot fully be seen"
            android:textColor="@color/not_selected"
            android:textSize="@dimen/msgr_size"
            android:fontFamily="@font/inter_regular"
            android:layout_marginStart="@dimen/period_horiz_padding"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/msgtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/thirdchat_lastmsg"
            app:layout_constraintStart_toEndOf="@id/thirdchat_lastmsg"
            tools:text=".17m"
            android:textColor="@color/not_selected"
            android:textSize="@dimen/msgr_size" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>