<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_space">

    <TextView
        android:id="@+id/task_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tab_top_start_margin"
        android:text="SUBMISSION"
        android:textColor="@color/not_selected"
        android:textSize="@dimen/msg_number_size"
        android:fontFamily="@font/inter_medium"/>

    <ImageButton
        android:id="@+id/add_file_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginpass_background"
        android:src="@drawable/ic_add_file"
        android:padding="@dimen/padding_space"
        android:layout_marginBottom="@dimen/tab_top_start_margin"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/first_requirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_top_start_margin"
        android:padding="@dimen/space_margin"
        android:background="@drawable/loginpass_background"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="There is a large amount of text here that you probably won't be able to see at all"
        android:textSize="@dimen/font"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/ic_cancel"
        android:drawablePadding="@dimen/padding_space"/>

    <TextView
        android:id="@+id/second_requirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_top_start_margin"
        android:padding="@dimen/space_margin"
        android:background="@drawable/loginpass_background"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="There is a large amount of text here that you probably won't be able to see at all"
        android:textSize="@dimen/font"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/ic_cancel"
        android:drawablePadding="@dimen/padding_space"/>



</LinearLayout>