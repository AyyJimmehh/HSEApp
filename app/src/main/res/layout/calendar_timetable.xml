<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/counter_margin">

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="09:30"
            android:textSize="@dimen/msg_number_size"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/start"
            android:layout_marginTop="@dimen/time_space"
            tools:text="10:50"
            android:textSize="@dimen/msg_number_size"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/not_selected"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/divider_margin"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/period_horiz_padding"
            tools:text="LECTURE"
            android:textSize="@dimen/sub_text_size"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/primary_hse_blue"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/type"
            android:layout_marginStart="@dimen/period_horiz_padding"
            tools:text="Optimization Methods (Eng)"
            android:textSize="@dimen/font"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginStart="@dimen/period_horiz_padding"
            tools:text="Online"
            android:textSize="@dimen/font"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/not_selected"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_online"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/mode"
            android:layout_marginTop="@dimen/course_tab_padding"
            android:layout_marginStart="@dimen/period_horiz_padding"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
