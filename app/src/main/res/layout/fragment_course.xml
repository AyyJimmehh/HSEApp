<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        tools:context=".ui.fragments.CourseFragment">

        <include layout="@layout/toolbar"
            android:id="@+id/coursetoolbar"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/courserecycler"
            app:layout_constraintTop_toBottomOf="@id/coursetoolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:background="@color/toolbar_background"
            android:paddingStart="11dp"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/courserecycler"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/counter_margin"
                android:layout_marginEnd="@dimen/counter_margin"
                android:layout_marginTop="@dimen/period_horiz_padding">

                <include layout="@layout/course_chat"
                    android:id="@+id/chats"/>

                <include layout="@layout/course_description"
                    android:id="@+id/course_description"/>

                <include layout="@layout/course_teaching_staff"
                    android:id="@+id/course_teaching_staff"/>

                <include layout="@layout/course_grading"
                    android:id="@+id/course_grading"/>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>